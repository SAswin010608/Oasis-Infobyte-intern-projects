#Import the data set for ramdomizer and characters
import string
import random
#This function generates and randomizers the password
#length,letters,numbers,sybols are parameter variables
def generate(length, letters, numbers, symbols):
    if not(letters or numbers or symbols):
        print("Must select a character type.")
        print("")
    
    character = ''
    if (letters):
        character += string.ascii_letters  #string.ascii_letters is a predefined function that has all uppercase and lowercase letters from A/a - Z/z
    if(numbers):
        character += string.digits         #string.digits is a predefined function that has all numbers from 0-9
    if(symbols):
        character += string.punctuation    #string.punctuation is a predefined function that has all special characters

    final = ''
    for i in range(length):
        final += random.choice(character)  #random.choice(character) mixes the characters in character variable
    return final

def main():
    while True:
        try:
            while True: #Keeps looping until valid length is entered by the user
                length = int(input("Please enter your desired password length: "))
                if(length<=0):
                    print("Please enter a valid length")
                else:
                    break
            
            #assigns a boolean value to these variables based on the user response
            check_letters = input("Do you want letters in your password? (yes/no) ").strip().lower() == "yes"
            check_numbers = input("Do you want numbers in your password? (yes/no) ").strip().lower() == "yes"
            check_symbols = input("Do you want symbols in your password? (yes/no) ").strip().lower() == "yes"

            #Generates the password
            password = generate(length, check_letters, check_numbers, check_symbols)
            
            #Prints the generated password
            print(f"Your password: {password}")
            break
        
        except ValueError:
            print("Invalid input. Please try again")


main()


    

